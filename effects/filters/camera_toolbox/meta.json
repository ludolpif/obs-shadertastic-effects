{
  "label": "Camera Toolbox",
  "parameters": [
    {
      "name": "camera_zoom",
      "label": "Camera zoom (inside frame)",
      "type": "double",
      "slider": true,
      "min": 1.0,
      "max": 16.0,
      "step": 0.01,
      "default": 1.0
    },
    {
      "name": "camera_scaledown",
      "label": "Camera frame scaledown",
      "type": "double",
      "slider": true,
      "min": 1.0,
      "max": 16.0,
      "step": 0.01,
      "default": 4.0
    },
    {
      "name": "camera_position_deg",
      "label": "Camera position (angle, clockwise)",
      "type": "double",
      "slider": true,
      "min": -360.0,
      "max": 360.0,
      "step": 1.0,
      "default": 45.0
    },
    {
      "name": "camera_position_margin_px",
      "label": "Camera margin from borders (in pixels)",
      "type": "double",
      "slider": true,
      "min": 0.0,
      "max": 128.0,
      "step": 1.0,
      "default": 16.0
    },
    {
      "name": "mirror_auto",
      "label": "Mirror automatically",
      "type": "bool",
      "default": false
    },
    {
      "name": "mirror_auto_threshold",
      "label": "Auto Mirror threshold",
      "type": "double",
      "slider": true,
      "min": -1.0,
      "max": 1.0,
      "step": 0.01,
      "default": 0.5
    },
    {
      "name": "mirror_progression",
      "label": "Manual Mirror progression",
      "type": "double",
      "slider": true,
      "min": 0.0,
      "max": 1.0,
      "step": 0.01,
      "default": 1.0
    }
  ]
}
